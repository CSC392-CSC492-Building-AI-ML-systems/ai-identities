{
  "compilerOptions": {
    "outDir": "dist",              // Output folder for compiled .js files
    "rootDir": "src",              // Input root folder
    "module": "esnext",          // Or "esnext" if you're using ESM
    "target": "es2020",            // Set to your target JS version
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
}